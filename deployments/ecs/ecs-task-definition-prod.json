{
  "family": "vpbank-kmult-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::590183822512:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::590183822512:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "590183822512.dkr.ecr.ap-southeast-1.amazonaws.com/vpbank-kmult-backend:latest",
      "cpu": 1536,
      "memory": 3072,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "ap-southeast-1"
        },
        {
          "name": "AWS_BEDROCK_REGION",
          "value": "us-east-1"
        },
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/vpbank-kmult-backend",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "prod"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/mutil_agent/public/api/v1/health-check/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    },
    {
      "name": "frontend",
      "image": "590183822512.dkr.ecr.ap-southeast-1.amazonaws.com/vpbank-kmult-frontend:latest",
      "cpu": 512,
      "memory": 1024,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/vpbank-kmult-frontend",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "prod"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    }
  ]
}
