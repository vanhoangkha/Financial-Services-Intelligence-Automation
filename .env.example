# ==================================================
# BFSI Multi-Agent System - Environment Configuration
# Production-Ready Banking Application
# ==================================================

# Application Environment
ENVIRONMENT=production  # development, staging, production
APP_NAME=VPBank Financial Intelligence Automation
APP_VERSION=2.0.0
DEBUG=false

# ==================================================
# Security Configuration (CRITICAL - NEVER COMMIT REAL VALUES)
# ==================================================

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
REQUIRE_MFA=true

# API Security
API_KEY=your-api-key-here
API_SECRET=your-api-secret-here

# ==================================================
# Database Configuration
# ==================================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://user:password@localhost:5432/vpbank_agents
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_SSL_MODE=require
DB_CONNECTION_ENCRYPTION=true

# MongoDB (Document Store)
MONGODB_URL=mongodb://user:password@localhost:27017/vpbank_agents
MONGODB_DB_NAME=vpbank_agents

# ==================================================
# AWS Configuration
# ==================================================

# AWS Credentials (Use IAM Roles in production)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=ap-southeast-1
AWS_ACCOUNT_ID=123456789012

# AWS Services
AWS_S3_BUCKET=vpbank-documents
AWS_KMS_KEY_ID=your-kms-key-id
AWS_SECRETS_MANAGER_ENABLED=true
AWS_CLOUDTRAIL_ENABLED=true

# ==================================================
# AI/LLM Configuration
# ==================================================

# LangChain & LangSmith
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=vpbank-agents-production
LANGSMITH_API_KEY=your-langsmith-api-key

# OpenAI / Bedrock
OPENAI_API_KEY=your-openai-api-key
AWS_BEDROCK_REGION=us-east-1

# ==================================================
# CORS & API Configuration
# ==================================================

# CORS (NEVER use * in production)
CORS_ALLOWED_ORIGINS=https://app.vpbank.com,https://admin.vpbank.com
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_SECONDS=60

# ==================================================
# SSL/TLS Configuration
# ==================================================

# HTTPS (CRITICAL for BFSI)
VERIFY_HTTPS=true
TLS_MIN_VERSION=TLSv1.2
ENABLE_CERTIFICATE_PINNING=true

# ==================================================
# File Upload Configuration
# ==================================================

MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.docx,.xlsx
SCAN_UPLOADS_FOR_MALWARE=true
UPLOAD_DIR=/var/uploads/vpbank

# ==================================================
# Logging & Monitoring
# ==================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_SECURITY_LOGGING=true
LOG_SENSITIVE_DATA=false
ENABLE_AUDIT_TRAIL=true
LOG_RETENTION_DAYS=365

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==================================================
# Session Management
# ==================================================

SESSION_TIMEOUT_MINUTES=15
ENABLE_SESSION_FIXATION_PROTECTION=true
ENABLE_CONCURRENT_SESSION_LIMIT=true
MAX_CONCURRENT_SESSIONS=1

# ==================================================
# Compliance Configuration
# ==================================================

PCI_DSS_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=true
DATA_RESIDENCY_REGION=ap-southeast-1

# ==================================================
# Rate Limiting & Protection
# ==================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_STRICT_MODE=true

# ==================================================
# Encryption Configuration
# ==================================================

ENCRYPTION_ALGORITHM=AES-256-GCM
ENABLE_DATA_AT_REST_ENCRYPTION=true
ENABLE_FIELD_LEVEL_ENCRYPTION=true
ENCRYPTION_KEY=your-encryption-key-min-32-chars

# ==================================================
# Email Configuration (Notifications)
# ==================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@vpbank.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@vpbank.com
SMTP_USE_TLS=true

# ==================================================
# Redis (Caching & Session Storage)
# ==================================================

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_SSL=true

# ==================================================
# Frontend Configuration
# ==================================================

REACT_APP_API_URL=https://api.vpbank.com
REACT_APP_WS_URL=wss://api.vpbank.com
REACT_APP_ENV=production

# ==================================================
# Banking Integration (VPBank Specific)
# ==================================================

VPBANK_API_ENDPOINT=https://api.vpbank.com.vn
VPBANK_API_KEY=your-vpbank-api-key
VPBANK_API_SECRET=your-vpbank-api-secret
VPBANK_CLIENT_ID=your-client-id

# ==================================================
# Compliance & Regulatory
# ==================================================

SBV_COMPLIANCE_MODE=true  # State Bank of Vietnam
DATA_LOCALIZATION_VIETNAM=true
ENABLE_TRANSACTION_MONITORING=true

# ==================================================
# Feature Flags
# ==================================================

ENABLE_AI_AGENTS=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_RISK_ASSESSMENT=true
ENABLE_COMPLIANCE_CHECKS=true
ENABLE_MULTI_AGENT_COORDINATION=true

# ==================================================
# Security Testing (Non-Production Only)
# ==================================================

# ENABLE_SECURITY_TESTING=false  # Only enable in staging
# MOCK_AUTHENTICATION=false  # Never enable in production
